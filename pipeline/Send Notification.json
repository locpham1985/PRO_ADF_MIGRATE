{
	"name": "Send Notification",
	"properties": {
		"activities": [
			{
				"name": "Web1",
				"type": "WebActivity",
				"dependsOn": [],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"url": "https://sendmailoutlook.azurewebsites.net:443/api/SendMail/triggers/manual/invoke?api-version=2022-05-01&sp=%2Ftriggers%2Fmanual%2Frun&sv=1.0&sig=8KlV47PHrCoK4H80Rrq6aWdoT6ehMoMVuQjDUKJs888",
					"method": "POST",
					"body": "{“EmailTo”: “@{pipeline().parameters.EmailTo}”,”Title”: “@{pipeline().parameters.Title}”,”DataFactoryName”: “@{pipeline().parameters.DataFactoryName}”,”PipelineName”: “@{pipeline().parameters.PipelineName}”,”Status”: “@{pipeline().parameters.Status}”,”ErrorMessage”: “@{pipeline().parameters.ErrorMessage}”,”SuccessMessage”: “@{pipeline().parameters.SuccessMessage}”}"
				}
			}
		],
		"parameters": {
			"Title": {
				"type": "string",
				"defaultValue": "Error"
			},
			"DataFactoryName": {
				"type": "string",
				"defaultValue": "ADF"
			},
			"EmailTo": {
				"type": "string",
				"defaultValue": "locpham@vus-etsc.edu.vn"
			},
			"ErrorMessage": {
				"type": "string",
				"defaultValue": "Error"
			},
			"PipelineName": {
				"type": "string",
				"defaultValue": "ADF"
			},
			"Status": {
				"type": "string",
				"defaultValue": "Error"
			},
			"SuccessMessage": {
				"type": "string",
				"defaultValue": "Success"
			}
		},
		"annotations": []
	}
}